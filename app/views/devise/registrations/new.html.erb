<div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
  <div class="card shadow">
    <div class="card-header">
      <h4 class="mb-0">Registro</h4>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :name, class: 'font-weight-bold' %>
          <%= f.text_field :full_name, class: 'form-control', placeholder: 'Ingresa tu nombre completo', autofocus: true %>
        </div>

        <div class="form-group">
          <%= f.label :email, class: 'font-weight-bold' %>
          <%= f.email_field :email, class: 'form-control', placeholder: 'Ingresa tu correo electrónico' %>
        </div>

        <div class="form-group">
          <%= f.label :password, class: 'font-weight-bold' %>
          <%= f.password_field :password, class: 'form-control', placeholder: 'Ingresa tu contraseña' %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, class: 'font-weight-bold' %>
          <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirma tu contraseña' %>
        </div>

        <div class="form-group mb-0">
          <%= f.submit "Registrarse", class: 'btn btn-success btn-block' %>
        </div>
      <% end %>
    </div>
    <div class="card-footer text-muted">
      ¿Ya tienes una cuenta? <%= link_to 'Iniciar sesión', new_user_session_path %>
    </div>
  </div>
</div>
