<div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
  <div class="card shadow">
    <div class="card-header">
      <h4 class="mb-0">Iniciar sesión</h4>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email, class: 'font-weight-bold' %>
          <%= f.email_field :email, class: 'form-control', placeholder: 'Ingresa tu correo electrónico', autofocus: true %>
        </div>

        <div class="form-group">
          <%= f.label :password, class: 'font-weight-bold' %>
          <%= f.password_field :password, class: 'form-control', placeholder: 'Ingresa tu contraseña' %>
        </div>

        <div class="form-group">
          <div class="custom-control custom-checkbox">
            <%= f.check_box :remember_me, class: 'custom-control-input' %>
            <%= f.label :remember_me, class: 'custom-control-label' %>
          </div>
        </div>

        <div class="form-group mb-0">
          <%= f.submit "Iniciar sesión", class: 'btn btn-success btn-block' %>
        </div>
      <% end %>
    </div>
    <div class="card-footer text-muted">
      ¿No tienes una cuenta? <%= link_to 'Regístrate', new_user_registration_path %>
    </div>
  </div>
</div>
